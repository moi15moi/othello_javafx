<VBox xmlns:fx="http://javafx.com/fxml" VBox.vgrow="ALWAYS" fx:controller="othello_javafx.vues.VueParametreFX">

	<VBox styleClass="conteneurPrincipal" VBox.vgrow="ALWAYS" fx:id="conteneurPrincipal">

		<VBox styleClass="conteneurParametres" VBox.vgrow="ALWAYS">

			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurParametre">
				<HBox styleClass="conteneurQuestion" HBox.hgrow="ALWAYS">
					<Text styleClass="conteneurParametreTexte" Text="%Couleurdespieces"/>
				</HBox >
				<HBox styleClass="conteneurReponse" HBox.hgrow="ALWAYS">
					<ComboBox styleClass="combobox" id="couleurPiece" HBox.hgrow="ALWAYS"/>
				</HBox>
			</HBox>

			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurParametre">
				<HBox styleClass="conteneurQuestion" HBox.hgrow="ALWAYS">
					<Text styleClass="conteneurParametreTexte" Text="%Couleurduplateaudejeu"/>
				</HBox >	
				<HBox styleClass="conteneurReponse" HBox.hgrow="ALWAYS">
					<TextField styleClass="combobox" fx:id="couleurPlateau"/>
				</HBox >	
			</HBox>
			
			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurParametre">
				<HBox styleClass="conteneurQuestion" HBox.hgrow="ALWAYS">
					<Text styleClass="conteneurParametreTexte" Text="%CouleurFondEcran"/>
				</HBox >	
				<HBox styleClass="conteneurReponse" HBox.hgrow="ALWAYS">
					<Textbox styleClass="combobox" fx:id="couleurFondEcran"/>
				</HBox >	
			</HBox>

			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurParametre">
				<HBox styleClass="conteneurQuestion" HBox.hgrow="ALWAYS">
					<Text styleClass="conteneurParametreTexte" Text="%NomJoueur01"/>
				</HBox >
				<HBox styleClass="conteneurReponse" HBox.hgrow="ALWAYS">				
					<TextField styleClass="combobox" text="%joueurUn"/>
				</HBox>
			</HBox>

			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurParametre">
				<HBox styleClass="conteneurQuestion" HBox.hgrow="ALWAYS">
					<Text styleClass="conteneurParametreTexte" Text="%NomJoueur02"/>
				</HBox >
				<HBox styleClass="conteneurReponse" HBox.hgrow="ALWAYS">		
					<TextField styleClass="combobox" text="%joueurDeux"/>
				</HBox >
			</HBox>

			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurParametre">
				<ButtonPersonnalise fx:id="buttonPersonnalise" styleClass="conteneurParametreTexte" Text="%SauvegarderEtQuitter"/>
			</HBox>
		</VBox>

	</VBox>

</VBox>
